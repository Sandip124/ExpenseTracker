@using ExpenseTracker.Core.Entities.Common
@using System.Net.Mime
@using ExpenseTracker.Core.Constants
@model ExpenseTracker.Web.ViewModels.Home.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section PageTitle
{
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <h2 class="page-title">
                    @ViewData["Title"]
                </h2>
            </div>
        </div>
    </div>
}

<div class="row row-deck row-cards">
    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Expense</div>
                    <div class="ms-auto lh-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Today</a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item active" href="#">Last 7 days</a>
                                <a class="dropdown-item" href="#">Last 30 days</a>
                                <a class="dropdown-item" href="#">Last 3 months</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="h1 mb-3">Rs.@Model.ExpensesToday</div>
                <div class="d-flex mb-2">
                    <div>Max Budget Limit</div>
                    <div class="ms-auto">
                        <span class="text-green d-inline-flex align-items-center lh-1">
                            7%
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="3 17 9 11 13 15 21 7"/><polyline points="14 7 21 7 21 14"/>
                            </svg>
                        </span>
                    </div>
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar bg-blue" style="width: 75%" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                        <span class="visually-hidden">75% Complete</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Revenue</div>
                    <div class="ms-auto lh-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Daily</a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item active" href="#">Last 7 days</a>
                                <a class="dropdown-item" href="#">Last 30 days</a>
                                <a class="dropdown-item" href="#">Last 3 months</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-baseline">
                    <div class="h1 mb-0 me-2">Rs. @Model.IncomeToday</div>
                    <div class="me-auto">
                        <span class="text-green d-inline-flex align-items-center lh-1">
                            8%
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="3 17 9 11 13 15 21 7"/><polyline points="14 7 21 7 21 14"/>
                            </svg>
                        </span>
                    </div>
                </div>
            </div>
            <div id="chart-revenue-bg" class="chart-sm"></div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">New clients</div>
                    <div class="ms-auto lh-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item active" href="#">Last 7 days</a>
                                <a class="dropdown-item" href="#">Last 30 days</a>
                                <a class="dropdown-item" href="#">Last 3 months</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-baseline">
                    <div class="h1 mb-3 me-2">14</div>
                    <div class="me-auto">
                        <span class="text-yellow d-inline-flex align-items-center lh-1">
                            43%
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="5" y1="12" x2="19" y2="12"/>
                            </svg>
                        </span>
                    </div>
                </div>
                <div id="chart-new-clients" class="chart-sm"></div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Active users</div>
                    <div class="ms-auto lh-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item active" href="#">Last 7 days</a>
                                <a class="dropdown-item" href="#">Last 30 days</a>
                                <a class="dropdown-item" href="#">Last 3 months</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-baseline">
                    <div class="h1 mb-3 me-2">6</div>
                    <div class="me-auto">
                        <span class="text-green d-inline-flex align-items-center lh-1">
                            4%
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="3 17 9 11 13 15 21 7"/><polyline points="14 7 21 7 21 14"/>
                            </svg>
                        </span>
                    </div>
                </div>
                <div id="chart-active-users" class="chart-sm"></div>
            </div>
        </div>
    </div>
</div>

<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <!-- Page pre-title -->
            <h2 class="page-title">
                Latest Transactions
            </h2>
        </div>
    </div>
</div>
<br>

<div class="row">
    <div class="col-lg-12">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="table-responsive">
                        @if (Model.Transactions.Any())
                        {
                            <table class="table card-table table-vcenter text-nowrap">

                                <thead>
                                <tr>
                                    <th class="w-2">TXN No.</th>
                                    <th>Transaction Amount</th>
                                    <th>Transaction Date</th>
                                    <th>Icon</th>
                                    <th>Type</th>
                                </tr>
                                </thead>
                                <tbody>


                                @foreach (var item in Model.Transactions)
                                {
                                    <tr>
                                        <td>
                                            <span class="text-muted">@item.Id.ToString("D5")</span>
                                        </td>
                                        <td>
                                            <strong>
                                                @if (item.Type == TransactionType.Income)
                                                {
                                                    <span class="text-success">
                                                        Rs. @item.Amount
                                                    </span>
                                                }
                                                else if (item.Type == TransactionType.Expense)
                                                {
                                                    <span class="text-danger">
                                                        Rs. @item.Amount
                                                    </span>
                                                }
                                            </strong>
                                        </td>
                                        <td>
                                            @item.TransactionDate.ToString("f")
                                        </td>
                                        <td>
                                            @Html.Raw(CategoryIcon.Icons[item.TransactionCategory.Icon]) @item.TransactionCategory.CategoryName
                                        </td>
                                        <td>
                                            <span class="me-1">
                                                @if (item.Type == TransactionType.Income)
                                                {
                                                    <span class="text-success">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19"/><line x1="18" y1="11" x2="12" y2="5"/><line x1="6" y1="11" x2="12" y2="5"/>
                                                        </svg>
                                                    </span>
                                                }
                                                else if (item.Type == TransactionType.Expense)
                                                {
                                                    <span class="text-danger">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19"/><line x1="18" y1="13" x2="12" y2="19"/><line x1="6" y1="13" x2="12" y2="19"/>
                                                        </svg>
                                                    </span>
                                                }
                                            </span> @item.Type
                                        </td>
                                    </tr>
                                }

                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="empty">
                                <div class="empty-img">
                                    <img src="./static/illustrations/undraw_printing_invoices_5r4r.svg" height="128" alt="">
                                </div>
                                <p class="empty-title">Transactions Not Found.</p>
                                <p class="empty-subtitle text-muted">
                                    Try adjusting your search or filter to find what you're looking for.
                                </p>
                                <div class="empty-action">
                                    <a asp-action="Create" asp-controller="Transaction" class="btn btn-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line>
                                        </svg>
                                        Create New
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

<div class="row">
    <div class="col-lg-12">
        <div class="row row-cards">
            <div class="col-lg-6 col-xl-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex">
                            <h3 class="card-title">Top Expending Categories</h3>
                            <div class="ms-auto">
                                <div class="dropdown">
                                    <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 30 days</a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a class="dropdown-item active" href="#">Last 7 days</a>
                                        <a class="dropdown-item" href="#">Last 30 days</a>
                                        <a class="dropdown-item" href="#">Last 3 months</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="chart-demo-pie"></div>
                    </div>
                </div>
            </div>
             <div class="col-lg-6 col-xl-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <h3 class="card-title">Income Vs Expenses</h3>
                                        <div class="ms-auto">
                                            <div class="dropdown">
                                                <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 30 days</a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item active" href="#">Last 7 days</a>
                                                    <a class="dropdown-item" href="#">Last 30 days</a>
                                                    <a class="dropdown-item" href="#">Last 3 months</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="transaction-summary-pie"></div>
                                </div>
                            </div>
                        </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>   
              // @@formatter:off
              document.addEventListener("DOMContentLoaded", function () {
                  
              	window.ApexCharts && (new ApexCharts(document.getElementById('chart-demo-pie'), {
              		chart: {
              			type: "donut",
              			fontFamily: 'inherit',
              			height: 240,
              			sparkline: {
              				enabled: true
              			},
              			animations: {
              				enabled: false
              			},
              		},
              		fill: {
              			opacity: 1,
              		},
              		series: [@foreach (var item in  @Model.TopExpendingCategories){<text>@item.Amount,</text>}],
              		labels: [@foreach (var item in  @Model.TopExpendingCategories){<text>"@item.CategoryName",</text>}],
              		grid: {
              			strokeDashArray: 4,
              		},
              		colors: [@foreach (var item in  @Model.TopExpendingCategories){<text>"@item.Color",</text>}],
              		legend: {
              			show: true,
              			position: 'bottom',
              			offsetY: 12,
              			markers: {
              				width: 10,
              				height: 10,
              				radius: 100,
              			},
              			itemMargin: {
              				horizontal: 8,
              				vertical: 8
              			},
              		},
              		tooltip: {
              			fillSeriesColor: false
              		},
              	})).render();
                  
                  	window.ApexCharts && (new ApexCharts(document.getElementById('transaction-summary-pie'), {
                                		chart: {
                                			type: "donut",
                                			fontFamily: 'inherit',
                                			height: 240,
                                			sparkline: {
                                				enabled: true
                                			},
                                			animations: {
                                				enabled: false
                                			},
                                		},
                                		fill: {
                                			opacity: 1,
                                		},
                                		series: [@foreach (var item in  @Model.TransactionSummary){<text>@item.Amount,</text>}],
                                		labels: [@foreach (var item in  @Model.TransactionSummary){<text>"@item.Type",</text>}],
                                		grid: {
                                			strokeDashArray: 4,
                                		},
                                		colors: [@foreach (var item in  @Model.TransactionSummary){<text>"@item.Color",</text>}],
                                		legend: {
                                			show: true,
                                			position: 'bottom',
                                			offsetY: 12,
                                			markers: {
                                				width: 10,
                                				height: 10,
                                				radius: 100,
                                			},
                                			itemMargin: {
                                				horizontal: 8,
                                				vertical: 8
                                			},
                                		},
                                		tooltip: {
                                			fillSeriesColor: false
                                		},
                                	})).render();
              });
              // @@formatter:on
        </script>
}